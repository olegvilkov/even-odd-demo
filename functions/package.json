{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "watch": "tsc -w",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulator": "firebase emulators:start",
    "test:mocha": "mocha --require ts-node/register --exit --extensions ts,tsx 'test/*.ts'",
    "test:ci": "firebase emulators:exec \"npm run test:mocha\"",
    "test": "npm run test:mocha -- --watch --watch-files lib,test"
  },
  "engines": {
    "node": "8"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@firebase/testing": "^0.20.11",
    "firebase-admin": "^9.1.1",
    "firebase-functions": "^3.11.0"
  },
  "devDependencies": {
    "@firebase/firestore-types": "^1.12.1",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "chai": "^4.2.0",
    "firebase-functions-test": "^0.2.1",
    "mocha": "^8.1.3",
    "ts-node": "^9.0.0",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
